# 本番環境用の環境変数テンプレート
# このファイルをコピーして本番サーバーの.envとして使用してください

APP_NAME="Radio Review"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://radio-review.com

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=radio_review
DB_USERNAME=radio_review_user
DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=
REDIS_PORT=6379

# タイムフリー録音設定
RECORDING_STORAGE_PATH=storage/app/recordings
RECORDING_MAX_PARALLEL=10
RECORDING_CHUNK_DELAY=200
RECORDING_TIMEOUT=30
RECORDING_CACHE_TTL=7200

# 本番用メール設定
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@radio-review.com"
MAIL_FROM_NAME="${APP_NAME}"
