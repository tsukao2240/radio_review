APP_NAME="Radio Review"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=radio_review
DB_USERNAME=root
DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=redis
SESSION_LIFETIME=120

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=
REDIS_PORT=6379

# タイムフリー録音設定
RECORDING_STORAGE_PATH=storage/app/recordings
RECORDING_MAX_PARALLEL=10
RECORDING_CHUNK_DELAY=200
RECORDING_TIMEOUT=30
RECORDING_CACHE_TTL=7200

MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# パフォーマンス監視設定
MONITORING_ENABLED=false
MONITORING_THRESHOLD_MS=1000
MONITORING_MEMORY_THRESHOLD_MB=50
MONITORING_LOG_ALL_REQUESTS=false
